<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_weight="1"
        android:layout_height="fill_parent"
        android:layout_width="0dp"
        android:id="@+id/hideLayout"
        android:orientation="vertical"
        tools:ignore="Suspicious0dp" >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn"
            android:text="choose a team"></Button>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnVerify"
            android:text="verify team"></Button>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rdn1"
            android:text="primul angajat "></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rdn2"
            android:text="al doilea angajat"></TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:layout_width="0dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/res"
            android:text="Vector de aparitii"></TextView>
        <TableLayout
            android:layout_marginTop="10dp"
            android:id="@+id/table_layout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:id="@+id/table_row2"
                android:padding="10dp">

                <TextView
                    android:id="@+id/title2"
                    android:fontFamily="serif"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:textColor="#000"
                    android:text="Nr1"/>
                <TextView
                    android:id="@+id/counts2"
                    android:textColor="#000"
                    android:fontFamily="serif"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:text="Nr2"/>
            </TableRow>

        </TableLayout>
    </LinearLayout>

    <LinearLayout
android:layout_weight="1"
android:layout_height="fill_parent"
android:orientation="vertical"
android:layout_width="0dp">

<TableLayout
    android:layout_marginTop="10dp"
    android:id="@+id/table_layout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/table_row1"
        android:padding="10dp">

        <TextView
            android:id="@+id/title1"
            android:fontFamily="serif"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:textColor="#000"
            android:text="Nr1"/>
        <TextView
            android:id="@+id/counts1"
            android:textColor="#000"
            android:fontFamily="serif"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="Nr2"/>
    </TableRow>
</TableLayout>
</LinearLayout>

</LinearLayout>